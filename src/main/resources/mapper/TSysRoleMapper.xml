                #{pkRoleId,jdbcType=VARCHAR},
            </if>
            <if test="roleName != null and roleName != ''">
                #{roleName,jdbcType=VARCHAR},
            </if>
            <if test="roleDesc != null and roleDesc != ''">
                #{roleDesc,jdbcType=VARCHAR},
            </if>
            <if test="createDate != null">
