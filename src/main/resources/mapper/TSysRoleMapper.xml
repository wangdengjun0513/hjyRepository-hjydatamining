    <sql id="BaseColumnList">
        pk_role_id,
        role_name,
        role_desc,
        create_date,
        enable_status,
        modify_time,
  </sql>
    <!--No problem 通过主键查询单个-->
    <select id="selectById" resultType="com.hjy.system.entity.TSysRole">
        select * from t_sys_role
        where pk_role_id = #{pkRoleId,jdbcType=VARCHAR}
    </select>
